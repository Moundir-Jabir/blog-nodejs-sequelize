<div class="container mx-auto flex flex-wrap py-6">

  <!-- Posts Section -->
  <section class="w-full mx-auto md:w-2/3 flex flex-col items-center px-3">
  {{#each articles}}
    <article class="flex flex-col shadow my-4">
      <!-- Article Image -->
      <a href="#" class="hover:opacity-75">
        <img class="rounded-t-lg"src="https://source.unsplash.com/collection/1346951/1000x500?sig=1">
      </a>
      <div class="bg-white flex flex-col justify-start p-6">
        <a href="#" class=" text-sm font-bold uppercase pb-4" style="color: #256D85;">{{categorie.name}}</a>
        <a href="#" class="text-3xl font-bold hover:text-gray-900 pb-4 uppercase" style="color: #256D85;">{{title}}</a>
        <p href="#" class="text-sm pb-3">
          By <a href="#" class="font-semibold hover:text-gray-800"  style="color: #256D85;">Admin</a>, Published on {{createdAt}}
        </p>
        <a href="#" class="pb-6">{{content}}</a>
        <a href="/{{id}}" class=" btn text-center py-3 mx-3 rounded uppercase text-white hover:text-black" style="background-color: #256D85;">learn
          More<i class="fas fa-arrow-right mx-3"></i></a>
      </div>
    </article>
    {{/each}}
  </section>

</div>