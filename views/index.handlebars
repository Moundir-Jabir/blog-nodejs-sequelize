<div class="container mx-auto flex flex-wrap py-6">

  <!-- Posts Section -->
  <section class="w-full mx-auto md:w-2/3 flex flex-col items-center px-3">
  {{#each articles}}
    <article class="flex flex-col shadow my-4">
      <!-- Article Image -->
      <a href="#" class="hover:opacity-75">
        <img src="https://source.unsplash.com/collection/1346951/1000x500?sig=1">
      </a>
      <div class="bg-white flex flex-col justify-start p-6">
        <a href="#" class="text-pink-700 text-sm font-bold uppercase pb-4">{{categorie.name}}</a>
        <a href="#" class="text-3xl font-bold hover:text-gray-700 pb-4">{{title}}</a>
        <p href="#" class="text-sm pb-3">
          By <a href="#" class="font-semibold hover:text-gray-800">Admin</a>, Published on {{createdAt}}
        </p>
        <a href="#" class="pb-6">{{content}}</a>
        <a href="/{{id}}" class=" btn text-center py-3 mx-3 rounded uppercase bg-pink-700 text-white hover:text-black">learn
          More<i class="fas fa-arrow-right"></i></a>
      </div>
    </article>
    {{/each}}
  </section>

</div>